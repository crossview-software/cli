		"url": "https://github.com/crossview-software/cli/issues"
	},
	"homepage": "https://github.com/crossview-software/cli#readme",
	"devDependencies": {
		"@types/node": "^13.1.1",
		"chai": "^4.2.0",
		"coveralls": "^3.0.11",
		"mocha": "^7.1.1",
		"nyc": "^15.0.0",
		"prettier": "^1.19.1",
		"typescript": "^3.7.4"
